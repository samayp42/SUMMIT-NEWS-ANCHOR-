# Environment variables for India AI Summit Workshop
# Copy this to .env and customize as needed

# ============================================================
# Service URLs (defaults - usually don't need to change)
# ============================================================
WHISPER_URL=http://127.0.0.1:8000/v1
OLLAMA_URL=http://127.0.0.1:11434/v1
PIPER_URL=http://localhost:8080

# ============================================================
# LLM Configuration
# ============================================================
LLM_MODEL=llama3.2:1b
LLM_MAX_TOKENS=100
LLM_TEMPERATURE=0.3

# ============================================================
# TTS Configuration
# ============================================================
TTS_VOICE=en_US-lessac-medium

# ============================================================
# Bot Configuration
# ============================================================
BOT_PORT=7860

# ============================================================
# NEWS ANCHOR (Session 5) - Optional
# ============================================================
# Get a free API key from https://newsapi.org/
# If not set, mock news headlines will be used
NEWS_API_KEY=
